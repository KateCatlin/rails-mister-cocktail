<%= simple_form_for([@cocktail, @dose]) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :ingredient_id, collection: @ingredients, input_html: { class: 'select2' } %>
    <%= f.input :description %>
  </div>

  <%= f.button :submit,  'Add ingredient', class: 'btn btn-treehouse'%>
  </div>
<% end %>
