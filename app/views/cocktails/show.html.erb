<h1><%= @cocktail.name %></h1>

<ul>
  <% @cocktail.doses.each do |dose| %>
  <li>
    <p>
      <%= dose.ingredient.name %>
      <%= dose.description %>,
    </p>
  </li>
  <% end %>
</ul>

<%= link_to 'Add Details!', new_cocktail_dose_path(@cocktail), class: "btn btn-warning" %>

<%= link_to "Delete Details!", cocktail_dose_path(@cocktail.doses), method: :destroy, data: { confirm: 'Are you certain you want to delete this?' }
 %>
