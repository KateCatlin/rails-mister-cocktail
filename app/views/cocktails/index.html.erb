<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('<%= image_path("banner.jpg") %>');">
  <div class="banner-content">
    <h1>Mister Cocktail</h1>
    <p>Pick your poison.</p>
  </div>
</div>

<div class="text-center">
  <%= link_to 'New Cocktail!', new_cocktail_path(@cocktail), class: "btn btn-treehouse" %>
</div>

<h1 class="text-center"> All the cocktails! </h1>

<div class="container">
  <div class="row">
    <% @cocktails.each do |cocktail| %>
    <div class="col-xs-12 col-sm-4">
      <div class="card" style="background-image: url('https://picsum.photos/200/300/?random')">
        <div class="card-description">
          <h2><%= cocktail.name %></h2>
        </div>
        <%= link_to "See more =>", cocktail_path(cocktail), class: "card-link" %>
      </div>
    </div>
    <% end %>
  </div>
</div>
